{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "target": "ES2020",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@atomic/*": ["./src/atomic/*"],
      "@composable/*": ["./src/composable/*"],
      "@functional/*": ["./src/functional/*"],
      "@visual/*": ["./src/visual/*"],
      "@util/*": ["./src/util/*"]
    }
  },
  "include": ["src"]
}
